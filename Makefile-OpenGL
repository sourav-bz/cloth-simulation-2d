# Makefile for 2D Cloth Simulation - OpenGL Version
# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -std=c++17 -Wall -Wextra -O2

# OpenGL/GLFW/GLEW flags
GL_LIBS = -lGL -lGLEW -lglfw

# Directories
SRCDIR = source-opengl
OBJDIR = obj-opengl
BINDIR = bin

# Source files for OpenGL version
SOURCES = $(SRCDIR)/MainGL.cpp $(SRCDIR)/ApplicationGL.cpp $(SRCDIR)/RendererGL.cpp \
          $(SRCDIR)/Cloth.cpp $(SRCDIR)/Point.cpp $(SRCDIR)/Stick.cpp $(SRCDIR)/Mouse.cpp

OBJECTS = $(SOURCES:$(SRCDIR)/%.cpp=$(OBJDIR)/%.o)

# Target executable
TARGET = $(BINDIR)/cloth-simulation-opengl

# Default target
all: $(TARGET)

# Create directories if they don't exist
$(OBJDIR):
	mkdir -p $(OBJDIR)

$(BINDIR):
	mkdir -p $(BINDIR)

# Link the executable
$(TARGET): $(OBJECTS) | $(BINDIR)
	$(CXX) $(OBJECTS) -o $@ $(GL_LIBS)

# Compile source files
$(OBJDIR)/%.o: $(SRCDIR)/%.cpp | $(OBJDIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -rf $(OBJDIR) $(BINDIR)/cloth-simulation-opengl

# Run the program
run: $(TARGET)
	./$(TARGET)

# Install dependencies (Ubuntu/Debian)
install-deps:
	sudo apt update
	sudo apt install libgl1-mesa-dev libglew-dev libglfw3-dev

.PHONY: all clean run install-deps
